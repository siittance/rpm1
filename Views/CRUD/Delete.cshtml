@model RPm_Gackan1.Models.Cataloge

@{
	ViewBag.Title = "Удаление пользователя";
}

<div>
	<dl class="dl-horizontal">
		<dt>Изображение</dt>
		<dd>
			@Html.DisplayFor(model => model.Images)
		</dd>
		<dt>Наименование</dt>
		<dd>
			@Html.DisplayFor(model => model.ProductName)
		</dd>
		<dt>Описание</dt>
		<dd>
			@Html.DisplayFor(model => model.ProductDescription)
		</dd>
		<dt>Цена</dt>
		<dd>
			@Html.DisplayFor(model => model.ProductPrice)
		</dd>
		<dt>Магазин id</dt>
		<dd>
			@Html.DisplayFor(model => model.MagazinesId)
		</dd>
		<dt>Категория продукта id</dt>
		<dd>
			@Html.DisplayFor(model => model.ProductCategoriesId)
		</dd>
	</dl>
	<div>
		<form asp-controller="CRUD" asp-action="Delete" method="post">
			<div class="form-group">
				<input type="submit" class="btn btn-default" value="Удалить"/>
			</div>
		</form>
	</div>
</div>