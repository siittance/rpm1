@model RPm_Gackan1.Models.Cataloge

@{
    ViewBag.Title = "Добавление";
}
<form asp-action="create" asp-controller="CRUD">
    <div class=" form-group">
        <label asp-for="Images" class="control-label">Картинка</label>
        <input type="text" asp-for="Images" class="form-control" />
    </div>
    <div class=" form-group">
        <label asp-for="ProductName" class="control-label">Название</label>
        <input type="text" asp-for="ProductName" class="form-control" />
    </div>
    <div class=" form-group">
        <label asp-for="ProductDescription" class="control-label">Описание</label>
        <input type="text" asp-for="ProductDescription" class="form-control" />
    </div>
    <div class=" form-group">
        <label asp-for="ProductPrice" class="control-label">Цена</label>
        <input type="number" asp-for="ProductPrice" class="form-control" />
    </div>
    <div class=" form-group">
        <label asp-for="ProductCategoriesId" class="control-label">Категория продукта</label>
        <input asp-for="ProductCategoriesId" asp-items="ViewBag.ProductCategories" class="form-control"></>
    </div>
    <div class=" form-group">
        <label asp-for="MagazinesId" class="control-label">Магазин id</label>
        <input type="number" asp-for="MagazinesId" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Добавить" class="btn btn-primary" />
    </div>

</form>

